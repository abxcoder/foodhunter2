<p style="color: green"><%= notice %></p>

<h2>Food</h2>
<table class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Jenis</th>
      <th>Origin</th>
      <%# <th>Cretatory</th> %>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.jenis %></td>
        <td><%= food.origin %></td> 
        <%# <td><%= food.user.try(:email) %></td>  %>
            <td><%= link_to 'Show', food_path(food), class:'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_food_path(food), class:'btn btn-warning' %></td>
            <td><%= button_to 'Destroy', food_path(food), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
        
      </tr>
    <% end %>
  <tbody>
</table>

<br>

<%= link_to 'New food', new_food_path, class:"btn btn-primary" %>




