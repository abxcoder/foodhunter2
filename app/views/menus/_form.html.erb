<%= form_with(model: menu) do |form| %>
  <% if menu.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
        <% menu.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name,  class: "form-control", required: true %>
  </div>
  <br/>

  <div class="form-group">
    <%= form.label :harga, style: "display: block" %>
    <%= form.text_field :harga,  class: "form-control", required: true %>
  </div>
  <br/>

  <div class="form-group">
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image,  class: "form-control", required: true %>
  </div>
  <br/>

  <div class="form-group">
    <%= form.label :restoran_id, style: "display: block" %>
    <%# <%= form.text_field :restoran_id %>
    <%= collection_select(:menu, :restoran_id, Restoran.all, :id, :name, prompt: true ) %>
  </div>
  <br/>

  <div class="form-group">
    <%= form.label :food_id, style: "display: block" %>
    <%= collection_select(:menu, :food_id, Food.all, :id, :name, prompt: true ) %>
  </div>
  <br/>

  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
